{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2017",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "incremental": true,
    "resolveJsonModule": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  "explainFiles": true
}